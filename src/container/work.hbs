<main>
  {{#with main}}
  <section>
    {{>title data="Work history" big=true}}
    <div>
      <ul>
        {{#each work}}
        <li>
          <div>{{position}}</div>
          <br>
          <div>{{duration.from}} &nbsp -
            {{#if duration.to}} {{duration.to}} {{else}} still working {{/if}}
          </div>
          <br>
          <div>
            {{#if company.name}}
            {{>link
            text=company.name
            href=company.url
            blank=true
            noLine=true }}
            {{else}}
            <b>{{company.name}}</b>
            {{/if}}
          </div>
          <br>
        </li>
        {{/each}}
      </ul>
    </div>
    <br>
    <strong>Projects ({{projAmt}})</strong>
    <br>
    <div>
      <ul>
        {{#each projects}}
        <li>
          <div>
            {{>link text=name href=url blank=true noLine=true }}
          </div>
          <br>
          <div>
            <P>{{about}}</P>
          </div>
          <br>
          <em>Project stacks({{stacksAmt}}) </em>
          <br>
          <ul>
            {{#each stacks}}
            <li>
              <div>{{name}}</div>
            </li>
            {{/each}}
          </ul>
          <br>
          <em>Project awards </em>
          <br>
          <ul>
            {{#each awards}}
            <li>
              <div>{{name}}</div>
            </li>
            {{/each}}
          </ul>
        </li>
        {{/each}}
      </ul>
    </div>

  </section>
  {{/with}}
</main>